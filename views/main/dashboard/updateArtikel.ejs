<div class="px-10 mt-4 mx-auto sm:max-w-full">
  <a class="flex items-center justify-between p-4 mb-8 text-sm font-semibold text-purple-100 bg-purple-600 rounded-lg shadow-md focus:outline-none focus:shadow-outline-purple" href="#">
    <div class="flex items-center">
      <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
      </svg>
      <span>UPDATE POSTINGAN</span>
    </div>
    <span>Back &RightArrow;</span>
  </a>
  <form action="/dashboard/<%= user %>/update/<%= data.slug %>?_method=PUT" method="post">
      <div class="mb-6">
        <label for="judul" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Judul</label>
        <input type="text" id="judul" name="judul" class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-blue-400 focus:outline-none focus:shadow-outline-blue dark:text-gray-300 dark:focus:shadow-outline-gray form-input" value="<%= data.judul %>" required>
      </div>
      <div class="mb-6">
        <label for="Thumbnail" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Thumbnail</label>
        <input type="text" id="Thumbnail" name="thumbnail_url" class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-blue-400 focus:outline-none focus:shadow-outline-blue dark:text-gray-300 dark:focus:shadow-outline-gray form-input" value="<%= data.thumbnail_url %>" required>
      </div>
      <div class="mb-6">
        <label for="Slug" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Slug</label>
        <input type="text" name="slug" id="Slug" class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-blue-400 focus:outline-none focus:shadow-outline-blue dark:text-gray-300 dark:focus:shadow-outline-gray form-input" value="<%= data.slug %>" required>
      </div>
      <div class="mb-6">
        <label for="Kategori" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Kategori</label>
        <input type="text" id="Kategori" name="rubrik" class="block w-full mt-1 text-sm dark:border-gray-600 dark:bg-gray-700 focus:border-blue-400 focus:outline-none focus:shadow-outline-blue dark:text-gray-300 dark:focus:shadow-outline-gray form-input" value="<%= data.rubrik %>" required>
      </div>
      <!-- author value -->
      <input type="hidden" name="author" value="<%= user %>">
      <label for="x" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300">Prev text</label>
      <input id="x" type="hidden" name="prev_text" value="<%= data.prev_text %>" required>
      <trix-editor input="x"></trix-editor>
      <label for="xx" class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300 mt-1">Content</label>
      <input id="xx" type="hidden" name="content" value="<%= data.content %>" required>
      <trix-editor input="xx"></trix-editor>
      <!-- button -->
      <div>
        <button class="px-5 py-3 mt-4 mb-4 font-medium leading-5 text-white transition-colors duration-150 bg-purple-600 border border-transparent rounded-lg active:bg-purple-600 hover:bg-purple-700 focus:outline-none focus:shadow-outline-purple" type="submit">
          Save and Publish
        </button>
      </div>
    </form>
</div>